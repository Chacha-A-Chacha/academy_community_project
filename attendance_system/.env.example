# .env.example

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOSTNAME=localhost
DB_NAME=attendance_system_dev
DB_POOL_SIZE=10

# Phoenix Configuration
PHX_HOST=localhost
PHX_PORT=4000
SECRET_KEY_BASE=your-secret-key-base-here-at-least-64-characters-long

# Guardian JWT Authentication
GUARDIAN_SECRET_KEY=your-guardian-secret-key-here

# Email Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Environment
MIX_ENV=dev

# QR Code Settings
QR_CODE_SIZE=200
QR_CODE_ERROR_CORRECTION=medium

# Session Settings
SESSION_TIMEOUT_MINUTES=480

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=csv,xlsx

# Background Jobs
OBAN_QUEUES_DEFAULT=10
OBAN_QUEUES_ATTENDANCE=5
OBAN_QUEUES_NOTIFICATIONS=3
OBAN_QUEUES_REPORTS=2
